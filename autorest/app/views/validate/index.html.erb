  <meta name="description" content="">
  <meta name="author" content="">

  <title>Hackathon2016</title>

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Hackathon 2016</a>
    </div>
  </div>
</nav>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <p></p>
    <p>Get ready to find out the quality of your swagger!!!</p>
  </div>
</div>

<div class="container">
  <%= form_tag("/validate/swagger", method: "post") do %>
      <fieldset class="form-group">
        <%= label_tag(:autorestVersion, "AutoRest Version") %>
        <%= select_tag(:autorestVersion, options_for_select([
                                                                ['0.17.0-Nightly20160725', "0.17.0-Nightly20160725"],
                                                                ['0.17.0-Nightly20160724', "0.17.0-Nightly20160724"],
                                                                ['0.17.0-Nightly20160723', "0.17.0-Nightly20160723"],
                                                                ['0.17.0-Nightly20160722', "0.17.0-Nightly20160722"],
                                                                ['0.17.0-Nightly20160721', "0.17.0-Nightly20160721"]]
        ), {:class => 'form-control'})  %>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:specUrl, "Swagger Spec Url") %>
        <%= text_field_tag(:specUrl, nil, {:placeholder => 'Swagger Specification Url', :class => 'form-control', :required => true}) %>
      </fieldset>


      <fieldset class="form-group">
        <%= label_tag(:modeler, "Modeler") %>
        <%= select_tag(:modeler, options_for_select([
                                                        ['Swagger', "Swagger"],
                                                        ['CompositeSwagger', "CompositeSwagger"]]
        ), {:class => 'form-control'})  %>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:validationLevel, "Swagger Generation validation level") %>
        <%= select_tag(:validationLevel, options_for_select([
                                                        ['Info', "Info"],
                                                        ['Warning', "Warning"]]
        ), {:class => 'form-control'})  %>
      </fieldset>

      <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>

  <hr>

  <footer>
    <p>&copy; 2016 Company, Inc.</p>
  </footer>
</div> <!-- /container -->


